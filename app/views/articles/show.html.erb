<div class="mx-auto mt-28 px-5 flex flex-wrap justify-center items-center">
  <h1 class="mb-7 flex w-screen text-5xl font-black justify-center">
    <%= @article.title %>
  </h1>

  <p class="text-2xl italic flex w-full justify-center">
    <%= @article.body %>
  </p>

  <div class="bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded justify-center mx-5">
    <%= link_to "Edit", edit_article_path(@article) %>
  </div>
  <div class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded justify-center mx-5">
    <%= link_to "Delete", article_path(@article),
    method: :delete,
    data: { confirm: "Are you sure you want to delete this article?" } %>
  </div>
</div>