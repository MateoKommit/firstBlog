<h1 class="mb-10 mt-20 flex w-screen text-5xl font-black justify-center">Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="flex flex-wrap justify-center items-center w-screen">
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field w-9/12 flex flex-wrap justify-center items-center space-x-2 my-6">
      <%= f.label :email, class: "flex text-3xl" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "flex rounded mb-6" %>
    </div>

    <div class="field w-9/12 flex flex-wrap justify-center items-center space-x-2 my-6">
      <div class="flex flex-wrap">
        <%= f.label :password, class: "flex text-3xl" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: "flex rounded mb-6" %>
    </div>

    <div class="field w-9/12 flex flex-wrap justify-center items-center space-x-2 my-6">
      <%= f.label :password_confirmation, class: "flex text-3xl" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "flex rounded mb-6" %>
    </div>

    <div class="actions flex w-full my-6 justify-center space-x-2">
      <%= f.submit "Sign up", class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
      <%= render "users/shared/links" %>
    </div>
  </div>
<% end %>

