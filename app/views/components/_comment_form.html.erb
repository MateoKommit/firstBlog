<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <div class="w-screen flex justify-center items-center">
    <div class="w-9/12 flex flex-wrap justify-center items-center space-x-5 space-y-5">
      <div class="w-9/12 justify-center items-center flex space-x-5">
        <%= form.label :commenter, { class: "flex w-auto text-xl justify-center" } %>
        <%= form.text_field :commenter, { class: "flex w-9/12 rounded" } %>
      </div>
      <%= form.label :body, { class: "flex w-9/12 text-xl my-6 justify-center" } %>
      <%= form.text_area :body, { class: "flex w-9/12 h-40 rounded mb-6" } %>

      <div class="flex w-9/12 my-6 pb-20 justify-center">
        <%= form.submit class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    </div>
  </div>
<% end %>